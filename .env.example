# =============================================================================
# Portfolio Backend — Environment Variables Example
# Copy this file to .env and fill in the values.
# =============================================================================

# ----------------------------------------------------------------------------
# Server
# ----------------------------------------------------------------------------
# Address the HTTP server binds to
HOST=0.0.0.0

# Port the HTTP server listens on
PORT=8080

# Runtime environment: development | staging | production
ENVIRONMENT=example

# ----------------------------------------------------------------------------
# Logging
# ----------------------------------------------------------------------------
# Minimum log level: trace | debug | info | warn | error
LOG_LEVEL=debug

# ----------------------------------------------------------------------------
# Database
# ----------------------------------------------------------------------------
# Full connection string for the PostgreSQL database
# For local Docker setup use: postgres://portfolio:portfolio@localhost:5432/portfolio
DATABASE_URL=postgres://portfolio:portfolio@localhost:5432/portfolio

# PostgreSQL credentials (used by docker-compose)
POSTGRES_USER=portfolio
POSTGRES_PASSWORD=portfolio
POSTGRES_DB=portfolio

# Connection pool minimum size
DB_POOL_MIN=2

# Connection pool maximum size
DB_POOL_MAX=10

# Seconds before a new connection attempt times out
DB_CONNECT_TIMEOUT=30

# Seconds before an idle connection is dropped from the pool
DB_IDLE_TIMEOUT=600

# ----------------------------------------------------------------------------
# CORS
# ----------------------------------------------------------------------------
# Comma-separated list of origins the backend will accept
ALLOWED_ORIGINS=http://localhost:3000

# Primary frontend origin (used for single-origin CORS header generation)
FRONTEND_ORIGIN=http://localhost:3000

# ----------------------------------------------------------------------------
# Authentication & Security
# ----------------------------------------------------------------------------
# Secret used to sign access JWTs — use a long random string in production
JWT_SECRET=change_me_to_a_long_random_secret

# Secret used to sign refresh tokens — must differ from JWT_SECRET
REFRESH_TOKEN_SECRET=change_me_to_another_long_random_secret

# ----------------------------------------------------------------------------
# Redis
# ----------------------------------------------------------------------------
# Redis connection URL (used for rate limiting and caching)
# For local Docker setup: redis://localhost:6379
REDIS_URL=redis://localhost:6379

# ----------------------------------------------------------------------------
# Grafana (docker-compose only)
# ----------------------------------------------------------------------------
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ----------------------------------------------------------------------------
# Admin Seeding
# ----------------------------------------------------------------------------
# Email for the bootstrap admin account
ADMIN_EMAIL=admin@example.com

# Plain-text password used during initial seeding (never stored as-is)
ADMIN_PASSWORD=change_me

# Pre-hashed Argon2 / bcrypt password (takes precedence over ADMIN_PASSWORD)
ADMIN_HASH_PASSWORD=
